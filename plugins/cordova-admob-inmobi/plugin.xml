<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-admob-inmobi" version="0.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>cordova-admob-inmobi</name>
  <description>Cordova AdMob Mediation Plugin for InMobi</description>

  <engines>
    <engine name="cordova" version=">=3" />
  </engines>

  <platform name="android">
    <source-file src="src/android/libadapterinmobi.jar" target-dir="libs" />
  </platform>

  <platform name="ios">
    <header-file src="src/ios/GADInMobiExtras.h" />
    <header-file src="src/ios/GADMAdapterInMobi.h" />
    <source-file src="src/ios/libAdapterInMobi.a" framework="true" />
  </platform>
</plugin>
